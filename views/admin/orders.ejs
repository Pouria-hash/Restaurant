<% layout('./layouts/boilerplate') %>
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col">
                <div class="d-flex my-3">
                    <h2>Orders</h2>

                </div>

                <div class="table-responsive">
                    <table class="table table-bordered   table-hover table-striped text-center">
                        <thead>
                            <tr>
                                <th>ROW</th>
                                <th>ORDER ID</th>
                                <th>USER</th>
                                <th>DATE</th>
                                <th>TOTAL</th>
                                <th>PAID</th>
                                <th>DELIVERED</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let order of orders) {%>
                                <tr class='align-middle'>
                                    <td>
                                        <%= orders.indexOf(order)+1 %>
                                    </td>
                                    <td>
                                        <%= order._id %>
                                    </td>
                                    <td>
                                        <%= currentUser.username %>
                                    </td>
                                    <td>
                                        <%= order.createAt %>
                                    </td>
                                    <td>
                                        <%= order.totalPrice %>
                                    </td>
                                    <td>
                                        <%= !order.isPaid ? "false" : order.paidAt %>
                                    </td>
                                    <td>
                                        <%= !order.isDelivered ? "false" : order.deliveredAt %>
                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="/order/<%= order._id %>">Deteil</a>
                                    </td>
                                </tr>
                                <% } %>

                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>