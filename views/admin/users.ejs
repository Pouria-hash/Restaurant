<% layout('./layouts/boilerplate') %>
    <div class="container">
        <div class="row d-flex justify-contenter">
            <div class="col">
                <h1>All Users</h1>
                <div class="table-responsive">
                    <table class="table table-bordered   table-hover table-striped text-center">
                        <thead>
                            <tr>
                                <th>ROW</th>
                                <th>USER ID</th>
                                <th>USERNAME</th>
                                <th>EMAIL</th>
                                <th>ADMIN</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let user of users) {%>
                                <tr class='align-middle'>
                                    <td>
                                        <%= users.indexOf(user)+1 %>
                                    </td>
                                    <td>
                                        <%= user._id %>
                                    </td>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.isAdmin %>
                                    </td>
                                    <td>
                                        <a class="btn btn-success btn-sm"
                                            href="/admin/users/<%= user._id %>/edit">Edit</a>
                                        <a class="btn btn-danger btn-sm"
                                            href="/admin/users/<%= user._id %>/delete">Delete</a>
                                    </td>
                                </tr>
                                <% } %>

                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>